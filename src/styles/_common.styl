body
  background $bodyBackgroundColor
  margin 3.2rem 3.2rem 0 3.2rem
  color $inkTextColor

  ::-moz-selection, :selection
    background $bodyBackgroundColor

@media (max-width: 960px)
  body
    margin 0

footer
  height 0

.footer
  text-align right
  color $footerTextColor
  height 3.2rem
  font-size 1rem
  line-height 2.4rem

  *
    margin-right: 1em

  a
    color $footerTextColor


hr
  background-color rgba($borderColor, 0.5)
  border-width 0
  height 2px
  width 100%
  margin 2rem auto


code
  color $codeTextColor
  background $codeBackgroundColor
  border-radius 4px

#page-content
  figcaption
    margin-top 0.8rem
    text-align center
    font-size 1.6rem
    line-height 2.4rem
