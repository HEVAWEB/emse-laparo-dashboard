html
    font-size 62.5%

body
    font-family $primaryFont
    font-size 1.6em
    line-height 1.6
    font-weight 400
    ::-moz-selection, :selection
        color $white

h1, h2, h3, h4, h5, h6
    font-weight 700
    line-height 1.3
    font-family $secondaryFont
    color $secondaryColor

h1
    font-size 3.2rem
    color $primaryColor

h2
    font-size 1.8rem

h3
    width 66%
    font-size 2.8rem
    margin-top 4rem

h4
    font-size 2.0rem
    margin-bottom 1.2rem
    margin-top 4rem

h5
    font-size 1.8rem
    margin-bottom 1.2rem
    margin-top 4rem

h6
    font-size 1.6rem
    margin-bottom 1.2rem
    margin-top 4rem
    color $primaryColor

a
    color $linkTextColor
    font-weight 700
    text-decoration underline
    cursor pointer
    &:focus
        box-shadow none
    &:visited
        color $linkTextColor
    &:hover
        color $primaryColor

p
    font-size 1.6rem
    line-height 1.6
    margin-top 1.6rem
    margin-bottom 0
    color $secondaryColor
    text-align justify

em
    font-weight 700
    font-style inherit

strong
    font-weight 700
    color $primaryColor
    font-style inherit

ul li
    list-style none

ol, ul, li
    padding-left 0
    margin-top -0rem
    margin-bottom 0rem
    font-size 1.6rem
    line-height 1.3
    color $secondaryColor

ul li::before
    content "\2022"
    color $primaryColor
    display inline-block
    width 1em
    margin-left -1em

ul ul, ul ol, ol ol, ol ul
    margin 0 0 1.5rem 3rem
    font-size 80%
