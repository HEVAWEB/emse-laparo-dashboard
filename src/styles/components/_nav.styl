.nav
    font-family $secondaryFont
    font-weight 700
    text-align right
    font-size 1.4rem
    line-height 1.3rem
    margin-top 6rem
    .nav-item
        list-style-type none
        margin-bottom 2rem
        text-decoration none
        font-size 1.6rem
        &:focus, &:hover
            text-decoration none
            color $navItemHoverColor
            transition ease .2s
