#page-content
  .tab-container
    margin-top 1.6rem
    height 5.6rem
    background-color #F4F4F7
    background linear-gradient(180deg, rgba(201, 200, 214, 0) 0%, rgba(201, 200, 214, 0.15) 100%)

    .tab
      display flex
      padding 0
      background-color transparent
      border none
      border-bottom solid $tableBorderColor 1px

      span
        margin auto
        font-size 1.2rem
        color $tabsTextColor
        font-weight 700
        line-height 1.6rem
        letter-spacing 0

      &.tab--selected
        border-bottom-color $tabsSelectedBorderColor

        span
          color $tabsSelectedColor

      &.tab--disabled
        span
          color $disabledTextColor
