.graph, .two-graphs, .custom-tabs-container
  background-color $containerBackgroundColor
  padding 2rem 4rem
  margin 0 -4rem

  & > *:first-child
    margin-top 0

.custom-tabs-container
  box-shadow inset 0px -8px 8px $toolsBoxShadowColor
  border-bottom solid 1px $toolsBorderBottomColor

.toolbar
  background-color $containerBackgroundColor
  margin-top 3.2rem
  margin-left -4rem
  margin-right -4rem
  padding 1.6rem 4rem

  & form
    margin-top -1.6rem

@media (max-width: 960px)
  .graph, .two-graphs, .custom-tabs-container
    margin 0 -2rem 0 -2rem

  .toolbar
    margin-left -2rem
    margin-right -2rem
    padding-left 2rem
    padding-right 2rem

.graph
  h4
    margin-top 0
    font-family $secondaryFont
    color $graphTitleTextColor
    font-size 2rem

.two-graphs
  margin 0 -4rem !important
  padding 0 4rem 1rem 4rem

  .graph
    margin 0
    padding 0

.custom-tabs-container
  padding 0 4rem
